#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};

class SinglyLL {
private:
    Node* head;

public:
    SinglyLL() : head(nullptr) {}

    void add(int data) {
        Node* newNode = new Node();
        newNode->data = data;
        newNode->next = head;
        head = newNode;
    }
    //todo
    void flip() {
        Node* n=head;
        Node* pred=nullptr;
        Node* succ=nullptr;
        while(n!=NULL){
            succ=n->next;
            n->next=pred;
            pred=n;
            n=succ;
        }
        head=pred;
    }

    void print() {
        Node* temp = head;
        while (temp) {
            cout << temp->data << " ";
            temp = temp->next;
        }
        cout << endl;
    }
};

int main() {
    SinglyLL list;
    list.add(10);
    list.add(20);
    list.add(30);
    list.flip();
    list.print();  // Output: 10 20 30 (flipped)
    return 0;
}
